{
  "manifest_version": 2,
  "name": "AdLapse - Make Ad Time Productive",
  "version": "1.0.0",
  "description": "Turn Prime Video ads into learning opportunities with news, poetry, and vocabulary",

  "permissions": [
    "storage",
    "https://www.amazon.com/*",
    "https://www.primevideo.com/*"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.primevideo.com/*"
      ],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "58.0",
      "data_collection_permissions": {
        "required": ["browsingActivity", "websiteContent", "websiteActivity"]
      }
    }
  }
}
